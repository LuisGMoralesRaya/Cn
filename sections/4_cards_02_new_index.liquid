                "default":  30
            },
            {
                "type": "select",
                "id": "copy_weight",
                "default": "300",
                "label": "Copy font weight",
                "options": [
                {
                    "value": "200",
                    "label": "Slim"
                },
                {
                    "value": "300",
                    "label": "Normal"
                },
                {
                    "value": "600",
                    "label": "Bold"
                },
                {
                    "value": "800",
