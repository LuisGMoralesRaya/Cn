<header class="hero">
  <div class="hero__container">
<div class="hero__title hero__title--left">
  <h1>{{section.settings.hero__title--up}}</h1>
  </div>
    <div class="hero__button hero__button--left">
      <a href="{{section.settings.button__href}}" target="_blank"><button class="boton-registro">{{section.settings.hero__button}}</button></a>
  </div>
    </div>
</header>
<style>
  .hero {
  box-sizing: border-box;
  grid-area: header;
  min-height: 65vh;
  border: 0px transparent;
  background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(255, 255, 255, 0.5)), url({{section.settings.hero__background | img_url: '5760x'}}) !important;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  	align-self: center;
    /*align-self: flex-start;*/
}
  
  @media (max-width: 920px){
   .hero {
    height: 100%;
    min-height: 40vh !important;
   }
  }
</style>

