<style>
  /* NOTICE Extra css, if you need this section as an isolated element, please avoid including the following */
  html body #banner_collection > .container > img+p {
    margin: 0 0 var(--desktop-container-gutter) 0 !important;
  }
  div[data-oke-reviews-carousel] {
    display: contents !important;
  }
  html body div.okeReviews-reviewsCarousel-heading {
    padding-top: unset !important;
    font-size: calc(var(--base-text-font-size) - (var(--default-text-font-size) - 20px))!important;
  }
  /*END NOTICE*/
#two_cards_container {
  	margin: 0 !important;
  	display: table !important;
    width: 100% !important;
  	max-width: 1480px !important;
    margin-left: auto !important;
    margin-right: auto !important;
    padding: 0 var(--desktop-container-gutter);
}

#two_cards_container .row{
	height: 14rem !important;
    display: inline-block !important;
    position: relative !important;
    float: left !important;
    overflow: hidden !important;
    margin-bottom: var(--desktop-container-gutter) !important;
}

#two_cards_container .row.one{
	width: 100% !important;	
}

#two_cards_container .row.two{
    width: calc((100% - 20px) / 2);
}

#two_cards_container .row.two:not(:nth-child(2)) {
    margin-right: 20px;
}

#two_cards_container .row section,
#two_cards_container .row aside{
	display: inline-block !important;
	float: left !important;
	width: 100% !important;
	height: 100% !important;
  	position: absolute !important;
}
  
#two_cards_container .row section {
    padding: 0.5rem 1rem !important;
    background-color: transparent !important;
    max-width: 50% !important;
}
  
#two_cards_container .row aside{
	background-size: cover !important;
	background-position: center center !important;
}

#two_cards_container .row section info {
    display: table !important;
    width: 100% !important;
    height: 100% !important;
}

#two_cards_container .row section info div.holder {
    display: table-cell !important;
}

#two_cards_container .row section info div.holder h2{
	margin: unset !important; 
}

#two_cards_container .row section info div.holder p {
	margin-bottom: 12px !important;
  	line-height: 1.3em !important;
}

#two_cards_container .row section info div.holder a{
    display: inline-block;
    padding: 0.5rem 1rem !important;
    width: auto !important;
    text-decoration: none !important;
  	transition: all 0.3s !important;
    position: relative !important;
  	font-weight: 600 !important;
}

@media screen and (max-width: 1024px){
    #two_cards_container .row {
        height: 16rem !important;
    }
}
  @media screen and (max-width: 768px){
    #two_cards_container .row {
        height: 19rem !important;
    }
    #two_cards_container .row section info div.holder a {
        padding: 0.5rem 1rem !important;
    }
}
@media screen and (max-width: 640px){
	#two_cards_container {
		padding: 0 var(--mobile-container-gutter) !important;
	}
	#two_cards_container .row.two{
		width: 100% !important;
		padding: 0 !important;
		margin: 0 !important;
	}
	#two_cards_container .row.two:nth-last-child(1){
      	margin-top: var(--mobile-container-gutter) !important;
		margin-bottom: var(--desktop-container-gutter) !important;
	}
    #two_cards_container .row {
        height: 23rem !important;
    }
    #two_cards_container .row aside{
      	background-position: left bottom !important;
    }
  	#two_cards_container .row section {
        max-width: 100% !important;
    }
}
</style>
<section>
    <div id="two_cards_container">
      <div class="fixer">
        {% assign iteration_number = 0 %}
        
        {% for block in section.blocks %}
        	{% assign iteration_button_color = block.settings.button_color %}
			{% assign iteration_button_text_color = block.settings.button_text_color %}
        	{% assign iteration_bck_mobile = block.settings.image_mobile | img_url %}
        	{% assign bck_op = block.settings.background_opacity | times: 0.01 %}
        	{% assign txt_sh = 0.20 | minus: bck_op %} 
            <div class="row {{ ' ' }} {%- if section.blocks.size > 1 -%}two{%- else -%}one{%- endif -%}">
                {% style %}
              	  #two_cards_container .row section info div.holder a:hover{
                      box-shadow: 0 2px 3px rgba(0,0,0,{{ txt_sh }}) !important;
                      opacity: .99 !important;
                  }
              	  @media screen and (max-width: 640px){
                      #two_cards_container .row aside.it_{{ iteration_number }}{
                          background-image:url("{{ iteration_bck_mobile }}") !important;
                      }
                  }
                {% endstyle %}
              	<aside class="it_{{ iteration_number }}" style='background-image:url("{{ block.settings.image | img_url }}")'>
                  <div class="overlay" 
                       style="background: linear-gradient(to top, transparent 23%, {{ block.settings.overlay_color }}) !important;
                              opacity: {{ bck_op }} !important;
                              width:100% !important;
                              height:100% !important;
                              position: absolute !important;
                              top: 0 !important;
                              left: 0 !important;
                              mix-blend-mode: {{ block.settings.overlay_type }} !important;">
                  </div>
                </aside>
                <section style="text-align:{{ block.settings.h_align }};">
                  	{% style %}
                  		#two_cards_container .row section info div.holder a.it_{{ iteration_number }}{
                            background-color:{{ iteration_button_color }} !important;
                            color: {{ iteration_button_text_color }} !important;
                        }
                  		#two_cards_container .row section info div.holder a.it_{{ iteration_number }}:hover{
                            color:{{ iteration_button_color }} !important;
                            background-color: {{ iteration_button_text_color }} !important;
                        }
                  	{% endstyle %}
                    <info>
                        <div class="holder" style="vertical-align:{{ block.settings.v_align }};">
                            <h2 style="font-size:{{ block.settings.font_size_heading | append: 'px' }};
                                       color: {{ block.settings.text_color}} !important;
                                       font-weight: {{ block.settings.title_weight }} !important;">{{ block.settings.title }}</h2>
                            <p style="font-size:{{ block.settings.font_size_paragraph | append: 'px' }};
                                      color: {{ block.settings.text_color}} !important;
                                      font-weight: {{ block.settings.description_weight }} !important;">{{ block.settings.description }}</p>
                            <a class="it_{{ iteration_number }}" href="{{ block.settings.link }}">{{ block.settings.button_text }}</a>
                        </div class="holder">
                    </info>
                </section>
            </div>
        	{% assign iteration_number = iteration_number | plus: 1 %}
        {% endfor %}
      </div>
    </diV>
</section>
