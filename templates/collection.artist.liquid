


<style>
.coleccion_destacada{
	width:100%;
    height:400px;
   
	background:url('{{ collection.metafields.my_fields.imagen_destacada | file_url }}') center center;
    background-size:cover;
}
.coleccion_header{
  	width:100%;
    height:400px;
  background-size:cover;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75));
}
.detalle_coleccion{
  background:#fff !important;
  padding:40px 20px !important;
  width:100%; 
  
  text-align;center;
}
.descripcion_coleccion{
  text-align:center;
}
.detalle_coleccion h1{
  color:#1e2d7d;
  font-size:30px;
  font-weight:bold;
  text-align:center;}
header.card__header{display:none !important;}
  .collection__toolbar--bordered{margin-top:0px !important;}
  .coleccion_header h1{color:#ffffff;text-align:center;vertical-align:middle;padding-top:80px;

}

  .stk_table{width:100%; margin-bottom:50px; }
  .stk_cell{ text-align:left;vertical-align:middle;}
  
  .stk_cell img{ text-align:center; }
  .stk_cell h1{color:#ffffff; font-size:32px;font-weight:bold; line-height:36px !important; padding-top:10px !important;}
  .stk_button{max-width:300px !important;}  
  .stk_artist_frame{text-align:center; background:url('https://cdn.shopify.com/s/files/1/0258/6276/6677/files/canvas-squar.svg?v=1645049580'); background-size:cover; background-position:center center; padding:10px; max-width:240px;margin:0px auto;}
  .stk_cell_right{text-align:center;}
  
  
