<script defer="defer">
  $(document).ready(function(){
    setTimeout(function() {
      $("div[id*='shopify-section-list-collections-template']").addClass("collection-group");
      $("body").find('.collection-group').each(function(){
        var link = $(this).attr("id");
        var title = $(this).find(".page__title.heading.h1").text();
        $("#navigator").append("<a href='#"+link+"'>"+title+"</a>");
      });
    }, 100);
  });
</script>