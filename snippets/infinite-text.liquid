{% for i in (1..50) %}
  {% if i == 49 %}
    {% break %}
  {% else %}
    {%- assign looptext  = looptext | append: '&nbsp;&nbsp;&nbsp;' | append: infinite_text -%}
  {% endif %}
{% endfor %}





<section class="section stk_infinite_text_section" >
  <div class="container">
    <div class="stk_infinite_title">
    <div class="track">
      <div class="content">{{looptext}} .</div>
    </div>
  </div>
  </div>
</section>
<style>
  .stk_infinite_text_section{margin:0px !important; padding:0px !important;}
  .stk_infinite_text_section .container{max-width:100% !important;padding:0px !important;}
  .stk_infinite_title {
    background:{{bg_color}};
    color:{{text_color}};
    position: relative;
    width: 100vw;
    max-width: 100%;
    height:32px;
    overflow-x: hidden;
    font-size:12px;
    padding-top:4px;
    
  }
  .track {
    position: absolute;
    white-space: nowrap;
    will-change: transform;
    animation: stk_infinite_title 900s linear infinite;
  }
  @keyframes stk_infinite_title {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
</style>

