.b2b-registro {
    display: flex;
    flex-direction: column;
    padding: 0px 30px;
    .contentLogo{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        img{
            width: 170px;
        }
        a{
            padding: 10px 20px;
            background-color: #f0297c;
            color: #fff;
            cursor: pointer;
            max-width: 150px;
            width: 100%;
            text-align: center;
        }
    }
    .itemMobile {
        display: none;
    }

    .b2b-registro-form {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .b2b-registro-banner {
        cursor: pointer;
        margin-bottom: 3rem;
        img{
            width: 100%;
        }
    }

    .b2b-registro-cards {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        margin-bottom: 4rem;
        .b2b-registro-cards-item {
            max-width: 350px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            img {
                width: 100%;
                object-fit: cover;
            }

            p {
                font-size: 20px;
                color: #16093f;
                font-weight: bold;
            }
        }
    }
}
.b2b-registro-footer{
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: #f0297c;
    flex-direction: column;
    padding: 20px;
    p {
        font-size: 20px;
        color: #fff;
        font-weight: bold;
        margin-bottom: 10px;
    }
    span{
        color: #fff;
    }
}
@media (min-width: 0px) and (max-width: 900px) {
    .b2b-registro{
        .itemDeskTop{
            display: none;
        }
    }
    .b2b-registro .itemMobile{
        display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
        p{
            font-size: 20px;
            color: #16093f;
            font-weight: 700;
            text-align: center;
            margin-top: 1rem;
        }
        a{
            padding: 10px 20px;
            background-color: #f0297c;
            color: #fff;
            cursor: pointer;
            max-width: 150px;
            width: 100%;
            text-align: center;
            margin-top: 1rem;
        }
    }
    .b2b-registro .b2b-registro-cards{
        flex-direction: column;
    }
}